package server

import (
    "encoding/json"
	"net/http"
	"net/http/httptest"
	"testing"

	"github.com/labstack/echo/v4"
	"github.com/stretchr/testify/assert"
)

// Checks if routes are registered correctly in Echo
func TestRegisterRoutes(t *testing.T) {
	s := &Server{}
	handler := s.RegisterRoutes()

	e, ok := handler.(*echo.Echo)
	assert.True(t, ok, "Handler should be of type *echo.Echo")
	assert.NotNil(t, e, "Echo instance should not be nil")
}

// Checks the hello world handler response in Echo
func TestHelloWorldHandler(t *testing.T) {
	s := &Server{}
	e := echo.New()
	e.GET("/", s.helloWorldHandler)

	req := httptest.NewRequest(http.MethodGet, "/", nil)
	rec := httptest.NewRecorder()
	e.ServeHTTP(rec, req)

	assert.Equal(t, http.StatusOK, rec.Code, "Status code should be 200")

	var resp map[string]string
	err := json.Unmarshal(rec.Body.Bytes(), &resp)
	assert.NoError(t, err, "Should not have an error unmarshalling response")
	assert.Equal(t, "Hello World", resp["message"], "Response message should be 'Hello World'")
}